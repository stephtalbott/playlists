<%- include('../partials/header') %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/playlists/<%= playlist.id %>?_method=PUT" method="POST" autocomplete="off">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="name" name="name" value="<%= playlist.name %>">
                    <label for="name">Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="description" name="description" value="<%= playlist.description %>">
                    <label for="description">Description</label>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">save playlist</button>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include('../partials/footer') %>